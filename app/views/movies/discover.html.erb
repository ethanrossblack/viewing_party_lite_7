<h2>Discover Movies</h2>

<%# Top Rated Movies %>
<%= form_with url: user_movies_path(@user), method: :get, local: true do |form| %>
  <%= form.hidden_field :q, value: "top_20rated" %>
  <%= form.submit "Find Top Rated Movies", name: nil%>
<% end %>

<%# Find Movies by Name %>
<%= form_with url: user_movies_path(@user), method: :get, local: true do |f| %>
  <%= f.hidden_field :q, value: :keywords %>
  <%= f.text_field :keywords, placeholder: "Search" %>
  <%= f.submit "Find Movies" %>
<% end %>