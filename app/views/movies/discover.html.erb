<h2>Discover Movies</h2>
<%= form_with url: user_movies_path(@user), method: :get do |form| %>
  <%= form.hidden_field :search_type, value: :top_rated %>
  <%= form.submit "Find Top Rated Movies"%>
<% end %>

<%= form_with url: user_movies_path(@user), method: :get, local: true do |f| %>
  <%= f.label :keywords %>
  <%= f.hidden_field :search_type, value: :keyword%>
  <%= f.text_field :keywords %>
  <%= f.submit "Find Movies" %>
<% end %>